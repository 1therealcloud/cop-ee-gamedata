[logic@burer_work]
suitable = {=is_monster_burer}
prior = 200
monster_job = true
active = mob_walker@passive
; MTB-Damian.Romanik [JUD-418] Start: Logic for handling burer being shot
on_hit = hit

[hit]
on_info = {=hit_by_actor} %+jup_b205_burer_attacked%
; MTB-Damian.Romanik [JUD-418] End: Logic for handling burer being shot

[mob_walker@passive]
path_walk = burer_02_walk
path_look = burer_02_look
combat_ignore_cond = true
on_info = {!npc_in_zone(jup_b205_burer_zone)} %=teleport_npc(jup_b205_monster_01_spawn_point)%
on_info2 = {=actor_in_zone(jup_b205_burer_zone)} mob_home@active
on_info3 = {+jup_b205_burer_attacked} mob_home@active		; MTB-Damian.Romanik [JUD-418]: Fix for burer not being aggressive after being shot
out_restr = jup_b205_burer_zone
aggressive = true

[mob_home@active]
path_home = burer_01_walk
home_min_radius = 5
home_max_radius = 60
aggressive = true
out_restr = jup_b205_burer_zone
;on_info = {!actor_in_zone(jup_b205_burer_zone)} mob_walker@passive
